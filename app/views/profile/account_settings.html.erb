<%= render 'shared/header' %>

<div class="container main_container" style="padding-left:0;margin-top:65px;">

	<%#= image_tag('startupclub_logo.png', :class=>"welcome_logo", :alt=>"start club", :size=>"500x33") %>
	<% if flash[:notice].nil? %><% else %>
		<div class="alert alert-info">
			<button class="close" data-dismiss="alert">×</button>
			<%= flash[:notice] %>
		</div> <!-- .alert -->
	<% end %>

	<% if current_user %>
	<div class="row">
		<div class="span3">
			<div class="well sidebar-nav">

				<ul class="nav nav-list">
	              <li class="nav-header">Profile Settings</li>
	              <li><a href="/profile/settings">Profile Information</a></li>
	              <li><a href="/profile/username">Username</a></li>
	              <li class="nav-header">Account Settings</li>
	              <li class="active"><a href="/account/settings">Edit Account</a></li>
	              <li class="nav-header">Misc Settings</li>
	              <li><a href="#">Invitations</a></li>
	            </ul>
				
			</div>
		</div> <!-- .span3 -->

		<div class="span9">
		<div class="well form-horizontal" style="">
				<h2 style="font-weight:500;">Account Setting »</h2>
				<br>


				<%= form_for @user, :url => {:controller => 'profile', :action => 'account_settings_update'} do |f| %>
					<fieldset>
						<div class="control-group">
					        <label class="control-label" for="prependedInput"><%= f.label :email, :class=>'' %></label>
					        <div class="controls">
					          <%= f.text_field :email, :class=>'' %>
					        </div>
						</div>
					</fieldset>					

					<fieldset>
						<div class="control-group">
					        <label class="control-label" for="prependedInput"></label>
					        <div class="controls">
					          <%= f.submit 'Update', :class=>"btn btn-success" %>
					        </div>
						</div>
					</fieldset>

				<% end %>

		</div> <!-- .span9 -->
	<% end %>

	</div> <!-- .row -->

</div><!--/.container-->


