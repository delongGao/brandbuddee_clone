<%= render 'shared/header' %>

<div class="container main_container" style="padding-left:0;margin-top:20px;">

	<%#= image_tag('startupclub_logo.png', :class=>"welcome_logo", :alt=>"start club", :size=>"500x33") %>
	<% if flash[:notice].nil? %><% else %>
		<div class="alert alert-info">
			<button class="close" data-dismiss="alert">×</button>
			<%= flash[:notice] %>
		</div> <!-- .alert -->
	<% end %>

	<% if current_user %>
	<div class="row">

		<% @static = 'password_settings' %>
        <%= render 'shared/static_settings_navi' %>

		<div class="span9">
		<div class="well form-horizontal" style="">
				<h2 style="font-weight:500;">Password Setting »</h2>
				<br>


				<%= form_for @user, :url => {:controller => 'profile', :action => 'password_settings_update'} do |f| %>
					<fieldset>
						<div class="control-group">
					        <label class="control-label" for="prependedInput"><%= f.label :current_password, 'Current Password' %></label>
					        <div class="controls">
					          <%= password_field_tag :current_password %>
					        </div>
						</div>
					</fieldset>

					<fieldset>
						<div class="control-group">
					        <label class="control-label" for="prependedInput"><%= f.label :password, 'New Password', :class=>'' %></label>
					        <div class="controls">
					          <%= f.password_field :password, :class=>'' %>
					        </div>
						</div>
					</fieldset>

					<fieldset>
						<div class="control-group">
					        <label class="control-label" for="prependedInput"><%= f.label :password_confirmation, 'Confirm Password', :class=>'' %></label>
					        <div class="controls">
					          <%= f.password_field :password_confirmation, :class=>'' %>
					        </div>
						</div>
					</fieldset>
					

					<fieldset>
						<div class="control-group">
					        <label class="control-label" for="prependedInput"></label>
					        <div class="controls">
					          <%= f.submit 'Update Profile', :class=>"btn btn-success" %>
					        </div>
						</div>
					</fieldset>

				<% end %>



		</div> <!-- .form-horizontal -->
				<% end %>

		</div> <!-- .span9 -->
	</div> <!-- .row -->
</div><!--/.container-->

<%= render 'shared/footer' %>