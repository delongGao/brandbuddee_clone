<div class="container">
	<div class="row">
		<% if @continue == true %>
			<% if (!@result.nil? && @result["page"]["admin"] == true) || params[:admin] == "true" %>
				<a href="/fb-embed-admin<%= "?page_id=#{@page_id}&liked=#{@liked}&admin=#{@admin}" %>" class="btn btn-info" style="font-weight:700;margin-bottom:1%;"><i class="icon-share-alt"></i> Continue to Embed Widget</a>
			<% end %>
			<% if @campaign.nil? %>
				<%= image_tag "likegate.png", size: "800x400", alt: "brandbuddee-seattle-rewards", title: "brandbuddee Seattle Rewards" %>
			<% else %>
				<% unless @campaign.is_white_label? %>
					<%= image_tag "likegate.png", size: "800x400", alt: "brandbuddee-seattle-rewards", title: "brandbuddee Seattle Rewards" %>
				<% else %>
					<% unless @campaign.brand.brand_logo.blank? %>
						<%= image_tag "likegatenopoweredby.png", size: "800x400", alt: "#{@campaign.brand.name.parameterize}-#{@campaign.title.parameterize}", title: "#{@campaign.brand.name} - #{@campaign.title}", style: "z-index:1;" %>
						<%= image_tag @campaign.brand.brand_logo_url(:square), alt: "#{@campaign.brand.name.parameterize}-#{@campaign.title.parameterize}", title: "#{@campaign.brand.name} - #{@campaign.title}", style: "z-index:9999;margin-top: -18%;margin-left: 28%;" %>
					<% else %>
						<%= image_tag "likegatenopoweredby.png", size: "800x400", alt: "#{@campaign.brand.name.parameterize}-#{@campaign.title.parameterize}", title: "#{@campaign.brand.name} - #{@campaign.title}", style: "z-index:1;" %>
						<h3 style="z-index:9999; margin-top:-6%; margin-left:2%; color: #FFFFFF;"><%= @campaign.brand.name unless @campaign.brand.name.length > 62 %></h3>
					<% end %>
				<% end %>
			<% end %>
		<% else %>
			<div class="span8 offset2">
				<div class="well well-large text-center" id="fb-embed-index">
					<% unless @error=="redirect_to_permissions_oauth" %>
						<h2><%= @error %></h2>
					<% else %>
						<div class="hero-unit" style="margin-top:4%;margin-bottom:3%;">
  							<h1>Important</h1>
  							<p>To use this app and get rewards from this brand, you need to enable a few permissions.</p>
  							<p>
    							<a href="https://www.facebook.com/dialog/oauth/?client_id=278238152312772&redirect_uri=http://brandbuddee.com/&scope=email,offline_access,publish_actions,publish_stream,user_birthday,user_about_me,user_location,user_likes,user_education_history,user_website,read_friendlists,user_interests,user_hometown,user_status,manage_pages" target="_blank" class="btn btn-info btn-large" onclick="enableBtnRefresh();">
    								<i class="icon-thumbs-up"></i> Enable Permissions
    							</a>
    							<h3 id="btnRefreshThisPage" style="display:none;"><i class="icon-refresh"></i> OK, Now Refresh This Page!</h3>
  							</p>
						</div>
					<% end %>
				</div>
			</div>
		<% end %>
	</div>
</div>
