<%= render 'shared/header' %>

<div class="container main_container">

	<div class="login-form-wrap well">
		<h2>Login</h2>

		<% if flash[:notice].nil? %><% else %>
		<div class="alert alert-info">
			<button class="close" data-dismiss="alert">Ã—</button>
			<%= flash[:notice] %>
		</div> <!-- .alert -->
		<% end %>
	
		<div class="login-form">
			<%= form_tag url_for(:action => 'create') do %>
			<p>
				<%= text_field_tag :email, params[:email], :class=>"signin-field signin-default", :placeholder=>"Email" %>
			</p>
			<p style="margin-bottom:0;">
				<%= password_field_tag :password, nil, :class=>"signin-field", :placeholder=>"Password" %>
			</p>
			<p class="button"><%= submit_tag "Login", :class=>"signin-btn btn" %></p>
			<a href="/signup" style="display:block;margin-bottom:10px;">Don't have an account? Signup!</a>
			<% end %>
		</div> <!-- .login-form -->
		
	</div> <!-- .login-form-wrap -->
	
</div><!--/.container-->