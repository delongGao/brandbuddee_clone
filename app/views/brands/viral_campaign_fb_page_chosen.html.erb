<%= render 'shared/brands_header' %>
<div class="container-fluid">
<div class="row-fluid">
<%= render 'shared/brands_side' %>
<noscript>
	<div class="alert alert-block span10">
		<h4 class="alert-heading">Warning!</h4>
		<p>You need to have <a href="http://en.wikipedia.org/wiki/JavaScript" target="_blank">JavaScript</a> enabled to use this site.</p>
	</div>
</noscript>
<div id="content" class="span10">
<% flash.each do |name, msg| %>
<div class="row">
	<div class="span6 offset3">
		<div class="alert alert-<%= name %> fade in">
			<a href="#" class="close" data-dismiss="alert">&times;</a>
			<%= msg.html_safe %>
		</div>
	</div>
</div>
<% end %>
<!-- Begin: Content -->
<div>
	<hr>
	<ul class="breadcrumb">
		<li>
			<a href="/brands/dashboard">Dashboard</a> <span class="divider">/</span>
		</li>
		<li>
			<a href="/brands/campaigns">View All Campaigns</a> <span class="divider">/</span>
		</li>
		<li>
			<a href="/brands/campaigns/view?_id=<%= @campaign.id %>">View Campaign: <%= truncate @campaign.title, length: 45, separator: ' ', omission: '...' %></a> <span class="divider">/</span>
		</li>
		<li>
			<a href="#">Go Viral!</a>
		</li>
		<% unless @brand.manager_first.nil? %><li class="pull-right">Welcome back, <%= @brand.manager_first %></li><% end %>
	</ul>
	<hr>
</div>

<div class="row-fluid sortable">
	<div class="box span12">
		<div class="box-header">
			<h2><i class="icon-beaker"></i><span class="break"></span>Install to Facebook Page</h2>
			<div class="box-icon">
				<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
			</div>
		</div>
		<div class="box-content">
			@result:<br>
			
		</div><!-- /.box-content -->
	</div><!-- /.box span8 -->
</div><!-- /.row-fluid -->
<hr>
<!-- end: Content -->
</div><!--/#content.span10-->
	</div><!--/fluid-row-->

<div class="clearfix"></div>

<%= render 'shared/brands_footer' %>

</div><!--/.fluid-container-->
<%= render 'shared/brands_scripts' %>