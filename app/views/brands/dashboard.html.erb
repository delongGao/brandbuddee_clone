<%= render 'shared/brands_header' %>
<div class="container-fluid">
<div class="row-fluid">
<%= render 'shared/brands_side' %>
<noscript>
	<div class="alert alert-block span10">
		<h4 class="alert-heading">Warning!</h4>
		<p>You need to have <a href="http://en.wikipedia.org/wiki/JavaScript" target="_blank">JavaScript</a> enabled to use this site.</p>
	</div>
</noscript>
<div id="content" class="span10">
<% flash.each do |name, msg| %>
<div class="row">
	<div class="span6 offset3">
		<div class="alert alert-<%= name %> fade in">
			<a href="#" class="close" data-dismiss="alert">&times;</a>
			<%= msg.html_safe %>
		</div>
	</div>
</div>
<% end %>
<!-- Begin: Content -->
<div>
	<hr>
	<ul class="breadcrumb">
		<li>
			<a href="#">Dashboard</a>
		</li>
		<% unless @brand.manager_first.nil? %><li class="pull-right">Welcome back, <%= @brand.manager_first %></li><% end %>
	</ul>
	<hr>
</div>

<div class="row-fluid">
	<a class="quick-button span2<% unless @brand.provider == "email" %> offset1<% end %>" href="/brands/campaigns">
		<i class="icon-tasks"></i>
		<p>Campaigns</p>
		<span class="notification"><%= @brand.campaigns.count %></span>
	</a>
	<a class="quick-button span2" href="/brands/redeems">
		<i class="icon-barcode"></i>
		<p>Redeems</p>
		<span class="notification green"><%= @num_of_redeems %></span>
	</a>
	<a class="quick-button span2" href="/brands/go-viral" style="border-color: #FF4646; -webkit-box-shadow: 0px 0px 3px rgba(255,0,0,.5); -moz-box-shadow: 0px 0px 3px rgba(255,0,0,.5); box-shadow: 0px 0px 3px rgba(255,0,0,.5);">
		<i class="icon-beaker" style="color:#FF4646;"></i>
		<p>Go Viral!</p>
	</a>
	<a class="quick-button span2" href="/brands/profile">
		<i class="icon-list-alt"></i>
		<p>Profile</p>
	</a>
	<a class="quick-button span2" href="/brands/change-email">
		<i class="icon-envelope-alt"></i>
		<p>Change Email</p>
	</a>
	<% if @brand.provider == "email" %>
	<a class="quick-button span2" href="/brands/change-password">
		<i class="icon-lock"></i>
		<p>Change Password</p>
	</a>
	<% end %>
</div>

<hr>

<div class="row-fluid">
	<div class="box span4" onTablet="span6" onDesktop="span4">
		<div class="box-header">
			<h2><i class="icon-list"></i><span class="break"></span>Overall Shares Per Network</h2>
			<div class="box-icon">
				<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
			</div>
		</div>
		<div class="box-content">
			<ul class="dashboard-list">
				<li>
					<a href="#">
						<i class="icon-facebook" style="font-size:1.35em;color:#3B5998;display: inline-block; width: 1.25em; text-align: center;"></i>
						<span style="color:#3B5998;"><%= @total_facebook_clicks %></span>
						Facebook Shares
					</a>
				</li>
			  	<li>
					<a href="#">
					  	<i class="icon-twitter blue" style="font-size:1.35em;display: inline-block; width: 1.25em; text-align: center;"></i>
					  	<span class="blue"><%= @total_twitter_clicks %></span>
					  	Twitter Shares
					</a>
			  	</li>
			  	<li>
					<a href="#">
					  <i class="icon-pinterest" style="font-size:1.35em;color:#CB2027;display: inline-block; width: 1.25em; text-align: center;"></i>
					  <span style="color:#CB2027;"><%= @total_pinterest_clicks %></span>
					  Pinterest Shares
					</a>
			  	</li>
			  	<li>
			  		<a href="#">
			  			<i class="icon-tumblr" style="font-size:1.35em;color:#365472;display: inline-block; width: 1.25em; text-align: center;"></i>
			  			<span style="color:#365472;"><%= @total_tumblr_clicks %></span>
			  			Tumblr Shares
			  		</a>
			  	</li>
			  	<li>
			  		<a href="#">
			  			<i class="icon-linkedin-sign" style="font-size:1.35em;color:#0073B2;display: inline-block; width: 1.25em; text-align: center;"></i>
			  			<span style="color:#0073B2;"><%= @total_linkedin_clicks %></span>
			  			LinkedIn Shares
			  		</a>
			  	</li>
			  	<li>
			  		<a href="#">
			  			<i class="icon-google-plus-sign" style="font-size:1.35em;color:#CB3C2C;display: inline-block; width: 1.25em; text-align: center;"></i>
			  			<span style="color:#CB3C2C;"><%= @total_google_plus_clicks %></span>
			  			Google+ Shares
			  		</a>
			  	</li>
			  	<li>
			  		<a href="#">
			  			<i class="icon-bullhorn green" style="font-size:1.35em;display: inline-block; width: 1.25em; text-align: center;"></i>
			  			<span class="green"><%= @total_social_clicks %></span>
			  			Total Shares
			  		</a>
			  	</li>
			</ul>
		</div>
	</div><!--/span-->

	<% unless @total_social_clicks < 1 %>
	<div class="box span4" onTablet="span6" onDesktop="span4">
		<div class="box-header">
			<h2><i class="icon-bar-chart"></i><span class="break"></span>Overall Network Comparison</h2>
			<div class="box-icon">
				<a href="#" class="btn-close"><i class="icon-remove"></i></a>
			</div>
		</div>
		<div class="box-content">
			<div id="social-share-comparison" style="height:300px"></div>
		</div>
	</div>
	<% end %>
	
	<div class="box span4<% if @total_social_clicks < 1 %> offset4<% end %>" onTablet="span6" onDesktop="span4">
		<div class="box-header">
			<h2><i class="icon-user"></i><span class="break"></span>Overall Last Users</h2>
			<div class="box-icon">
				<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
			</div>
		</div>
		<div class="box-content">
			<ul class="dashboard-list">
			<% @users_list.each do |user| %>
				<li>
					<a href="/<%= user.nickname unless user.nickname.empty? %>" target="_blank">
						<%= image_tag user.profile_image_url(:thumb).to_s, class: 'avatar', title: "#{user.email.to_s.humanize}'s Profile" %>
					</a>
					<strong>Email:</strong> <a href="/<%= user.nickname unless user.nickname.empty? %>" target="_blank" title="<%= user.email.to_s.humanize %>'s Profile"><%= user.email unless user.email.empty? %><% if user.email.empty? %><span class="label label-important">Not Available</span><% end %></a><br>
					<strong>Since:</strong> <%= time_ago_in_words(user.date) + " ago" unless user.date.nil? %><br>
					<strong>Connects Using:</strong> <span class="label label-success"><%= user.provider.humanize unless user.provider.blank? %><% if user.provider.blank? %>Email<% end %></span>
				</li>
			<% end %>
			</ul>
		</div>
	</div><!--/span-->
			
</div>


		<hr>
<!-- end: Content -->
</div><!--/#content.span10-->
	</div><!--/fluid-row-->

<div class="clearfix"></div>

<%= render 'shared/brands_footer' %>

</div><!--/.fluid-container-->
<%= render 'shared/brands_scripts' %>
<% unless @total_social_clicks < 1 %>
<script type="text/javascript">
	var data = [
		{ label: "Facebook",  data: <%= @total_facebook_clicks %>},
		{ label: "Twitter",  data: <%= @total_twitter_clicks %>},
		{ label: "Pinterest", data: <%= @total_pinterest_clicks %>},
		{ label: "Tumblr", data: <%= @total_tumblr_clicks %>},
		{ label: "Linkedin", data: <%= @total_linkedin_clicks %>},
		{ label: "Google+", data: <%= @total_google_plus_clicks %>}
	];
	if($("#social-share-comparison").length) {
		$.plot($("#social-share-comparison"), data,
		{
			series: {
				pie: {
					show: true
				}
			},
			grid: {
				hoverable: true,
				clickable: true
			},
			legend: {
				show: false
			},
			colors: ["#3B5998", "#1DCAFF", "#CB2027", "#365472", "#0073B2", "#CB3C2C"]
		});
		function pieHover(event, pos, obj) {
			if (!obj)
				return;
			percent = parseFloat(obj.series.percent).toFixed(2);
			$("#hover").html('<span style="font-weight: bold; color: '+obj.series.color+'">'+obj.series.label+' ('+percent+'%)</span>');
		}
		$("#social-share-comparison").bind("plothover", pieHover);
	}
</script>
<% end %>
