<%= render 'shared/brands_header' %>
<div class="container-fluid">
<div class="row-fluid">
<%= render 'shared/brands_side' %>
<noscript>
	<div class="alert alert-block span10">
		<h4 class="alert-heading">Warning!</h4>
		<p>You need to have <a title="sweepstakes contests giveaways brandbuddee" href="http://www.enable-javascript.com/" target="_blank">JavaScript</a> enabled to use this site.</p>
	</div>
</noscript>
<div id="content" class="span10">
<% flash.each do |name, msg| %>
<div class="row">
	<div class="span6 offset3">
		<div class="alert alert-<%= name %> fade in">
			<a title="sweepstakes contests giveaways brandbuddee" href="#" class="close" data-dismiss="alert">&times;</a>
			<%= msg.html_safe %>
		</div>
	</div>
</div>
<% end %>
<!-- Begin: Content -->
<div>
	<hr>
	<ul class="breadcrumb">
		<li>
			<a title="sweepstakes contests giveaways brandbuddee" href="/brands/dashboard">Dashboard</a> <span class="divider">/</span>
		</li>
		<li>
			<a title="sweepstakes contests giveaways brandbuddee" href="#">Go Viral!</a>
		</li>
		<% unless @brand.manager_first.nil? %><li class="pull-right">Welcome back, <%= @brand.manager_first %></li><% end %>
	</ul>
	<hr>
</div>

<div class="row-fluid">
	<div class="box span12">
		<div class="box-header">
			<h2><i class="icon-beaker"></i><span class="break"></span>Pick a campaign to go viral with!</h2>
			<div class="box-icon">
				<a title="sweepstakes contests giveaways brandbuddee" href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
			</div>
		</div>
		<div class="box-content">
			<table class="table table-striped table-bordered bootstrap-datatable datatable">
			  	<thead>
				  	<tr>
					  	<th>Title</th>
					  	<th>End Date</th>
					  	<th>Redeems Left</th>
					  	<th>Status</th>
					  	<th>Details</th>
				  	</tr>
			  	</thead>   
			  	<tbody>
		  		<% @brand.campaigns.each do |c| %>
			  		<tr>
						<td><%= truncate c.title, length: 75, separator: ' ', omission: '...' %></td>
						<td class="center"><%= c.end_date.to_formatted_s(:long_ordinal) %></td>
						<td class="center"><%= c.limit - c.redeems.size < 0 ? 0 : c.limit - c.redeems.size %></td>
						<td class="center center-me">
							<span class="label label-<%= c.status=="active" ? "success" : "important" %>"><%= c.status %></span>
						</td>
						<td class="center center-me">
							<a title="sweepstakes contests giveaways brandbuddee" class="btn btn-success" href="/brands/campaigns/viral?_id=<%= c.id %>">
								<i class="icon-zoom-in icon-white"></i>  
							</a>
						</td>
					</tr>
				<% end %>
			  	</tbody>
		  	</table>            
		</div>
	</div><!--/span-->
</div><!--/row-->
<hr>

<!-- end: Content -->
</div><!--/#content.span10-->
	</div><!--/fluid-row-->

<div class="clearfix"></div>

<%= render 'shared/brands_footer' %>

</div><!--/.fluid-container-->
<%= render 'shared/brands_scripts' %>
