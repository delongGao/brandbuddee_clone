<%= render 'shared/brands_header' %>
<div class="container-fluid">
<div class="row-fluid">
<%= render 'shared/brands_side' %>
<noscript>
	<div class="alert alert-block span10">
		<h4 class="alert-heading">Warning!</h4>
		<p>You need to have <a href="http://en.wikipedia.org/wiki/JavaScript" target="_blank">JavaScript</a> enabled to use this site.</p>
	</div>
</noscript>
<div id="content" class="span10">
<% flash.each do |name, msg| %>
<div class="row">
	<div class="span6 offset3">
		<div class="alert alert-<%= name %> fade in">
			<a href="#" class="close" data-dismiss="alert">&times;</a>
			<%= msg.html_safe %>
		</div>
	</div>
</div>
<% end %>
<!-- Begin: Content -->
<div>
	<hr>
	<ul class="breadcrumb">
		<li>
			<a href="/brands/dashboard">Dashboard</a> <span class="divider">/</span>
		</li>
		<li>
			<a href="#">View All Redeems</a>
		</li>
		<% unless @brand.manager_first.nil? %><li class="pull-right">Welcome back, <%= @brand.manager_first %></li><% end %>
	</ul>
	<hr>
</div>
<div class="row-fluid">
	<div class="box span12">
		<div class="box-header">
			<h2><i class="icon-barcode"></i><span class="break"></span>View All Redeems</h2>
			<div class="box-icon">
				<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
			</div>
		</div>
		<div class="box-content">
			<table class="table table-striped table-bordered bootstrap-datatable datatable">
			  	<thead>
				  	<tr>
					  	<th>Winner Name</th>
					  	<th>Winner Email</th>
					  	<th>Date Won</th>
					  	<th>Redeem Code</th>
					  	<th>View Campaign</th>
				  	</tr>
			  	</thead>   
			  	<tbody>
		  		<% @brand.campaigns.each do |c| %>
		  		<% c.redeems.each do |r| %>
					<tr>
						<td><% unless r.user.first_name.blank? || r.user.last_name.blank? %><%= "#{r.user.first_name} #{r.user.last_name}" %><% else %><span class="label label-important">Not Available</span><% end %></td>
						<td class="center"><%= r.user.email %></td>
						<td class="center"><%= r.date.to_formatted_s(:long_ordinal) %></td>
						<td class="center"><span class="label label-info"><%= r.redeem_code %></span></td>
						<td class="center center-me">
							<a class="btn btn-success" href="/brands/campaigns/view?_id=<%= r.campaign.id %>" target="_blank">
								<i class="icon-zoom-in icon-white"></i>  
							</a>
						</td>
					</tr>
				<% end %>
				<% end %>
				</tbody>
		  	</table>
		</div>
	</div><!--/span-->
</div><!--/row-->
<hr>
<!-- end: Content -->
</div><!--/#content.span10-->
	</div><!--/fluid-row-->

<div class="clearfix"></div>

<%= render 'shared/brands_footer' %>

</div><!--/.fluid-container-->
<%= render 'shared/brands_scripts' %>
