<%= render 'shared/brands_header' %>
<div class="container-fluid">
<div class="row-fluid">
<%= render 'shared/brands_side' %>
<noscript>
	<div class="alert alert-block span10">
		<h4 class="alert-heading">Warning!</h4>
		<p>You need to have <a title="sweepstakes contests giveaways brandbuddee" href="http://www.enable-javascript.com/" target="_blank">JavaScript</a> enabled to use this site.</p>
	</div>
</noscript>
<div id="content" class="span10">
<% flash.each do |name, msg| %>
<div class="row">
	<div class="span6 offset3">
		<div class="alert alert-<%= name %> fade in">
			<a title="sweepstakes contests giveaways brandbuddee" href="#" class="close" data-dismiss="alert">&times;</a>
			<%= msg.html_safe %>
		</div>
	</div>
</div>
<% end %>
<!-- Begin: Content -->
<div>
	<hr>
	<ul class="breadcrumb">
		<li>
			<a title="sweepstakes contests giveaways brandbuddee" href="/brands/dashboard">Dashboard</a> <span class="divider">/</span>
		</li>
		<li>
			<a title="sweepstakes contests giveaways brandbuddee" href="/brands/campaigns">View All Campaigns</a> <span class="divider">/</span>
		</li>
		<li>
			<a title="sweepstakes contests giveaways brandbuddee" href="/brands/campaigns/view?_id=<%= @campaign.id %>">View Campaign: <%= truncate @campaign.title, length: 45, separator: ' ', omission: '...' %></a> <span class="divider">/</span>
		</li>
		<li>
			<a title="sweepstakes contests giveaways brandbuddee" href="#">Buddees</a>
		</li>
		<% unless @brand.manager_first.nil? %><li class="pull-right">Welcome back, <%= @brand.manager_first %></li><% end %>
	</ul>
	<hr>
</div>
<div class="row-fluid sortable">		
	<div class="box span12">
		<div class="box-header" data-original-title>
			<h2><i class="icon-user"></i><span class="break"></span>Campaign Buddees: <%= truncate @campaign.title, length: 75, separator: ' ', omission: '...' %></h2>
			<div class="box-icon">
				<a title="sweepstakes contests giveaways brandbuddee" href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
			</div>
		</div>
		<div class="box-content">
			<table class="table table-striped table-bordered bootstrap-datatable datatable">
			  	<thead>
				  	<tr>
					  	<th>First Name</th>
					  	<th>Last Name</th>
					  	<th>Email</th>
					  	<th>Location</th>
					  	<th>View Profile</th>
				  	</tr>
			  	</thead>   
			  	<tbody>
		  		<% @campaign.users.each do |u| %>
					<tr>
						<td><% unless u.first_name.blank? %><%= u.first_name %><% else %><span class="label label-important" style="margin-top:4%;">Not Available</span><% end %></td>
						<td class="center"><% unless u.last_name.blank? %><%= u.last_name %><% else %><span class="label label-important" style="margin-top:4%;">Not Available</span><% end %></td>
						<td class="center"><%= u.email %></td>
						<td class="center"><% unless u.city.blank? %><%= u.city %><% else %><span class="label label-important" style="margin-top:2.5%;">Not Available</span><% end %></td>
						<td class="center center-me">
							<a title="sweepstakes contests giveaways brandbuddee" class="btn btn-success" href="<%= root_url + u.nickname %>" target="_blank">
								<i class="icon-zoom-in icon-white"></i>  
							</a>
						</td>
					</tr>
				<% end %>
				</tbody>
		  	</table>
		</div><!-- /.box-content -->
	</div><!--/span-->
</div><!--/row-->
<hr>
<!-- end: Content -->
</div><!--/#content.span10-->
	</div><!--/fluid-row-->

<div class="clearfix"></div>

<%= render 'shared/brands_footer' %>

</div><!--/.fluid-container-->
<%= render 'shared/brands_scripts' %>
