<%= render 'shared/brands_header' %>
<div class="container-fluid">
<div class="row-fluid">
<%= render 'shared/brands_side' %>
<noscript>
	<div class="alert alert-block span10">
		<h4 class="alert-heading">Warning!</h4>
		<p>You need to have <a title="sweepstakes contests giveaways brandbuddee" href="http://www.enable-javascript.com/" target="_blank">JavaScript</a> enabled to use this site.</p>
	</div>
</noscript>
<div id="content" class="span10">
<% flash.each do |name, msg| %>
<div class="row">
	<div class="span6 offset3">
		<div class="alert alert-<%= name %> fade in">
			<a title="sweepstakes contests giveaways brandbuddee" href="#" class="close" data-dismiss="alert">&times;</a>
			<%= msg.html_safe %>
		</div>
	</div>
</div>
<% end %>
<!-- Begin: Content -->
<div>
	<hr>
	<ul class="breadcrumb">
		<li>
			<a title="sweepstakes contests giveaways brandbuddee" href="/brands/dashboard">Dashboard</a> <span class="divider">/</span>
		</li>
		<li>
			<a title="sweepstakes contests giveaways brandbuddee" href="/brands/campaigns">View All Campaigns</a> <span class="divider">/</span>
		</li>
		<li>
			<a title="sweepstakes contests giveaways brandbuddee" href="/brands/campaigns/view?_id=<%= @campaign.id %>">View Campaign: <%= truncate @campaign.title, length: 45, separator: ' ', omission: '...' %></a> <span class="divider">/</span>
		</li>
		<li>
			<a title="sweepstakes contests giveaways brandbuddee" href="/brands/campaigns/viral?_id=<%= @campaign.id %>">Go Viral!</a> <span class="divider">/</span>
		</li>
		<li>
			<a title="sweepstakes contests giveaways brandbuddee" href="#">Tell Friends Via Email</a>
		</li>
		<% unless @brand.manager_first.nil? %><li class="pull-right">Welcome back, <%= @brand.manager_first %></li><% end %>
	</ul>
	<hr>
</div>

<div class="row-fluid sortable">
	<div class="box span6 offset3">
		<div class="box-header">
			<h2><i class="icon-envelope-alt"></i><span class="break"></span>Tell Friends Via Email</h2>
			<div class="box-icon">
				<a title="sweepstakes contests giveaways brandbuddee" href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
			</div>
		</div>
		<div class="box-content" style="overflow:hidden;">
			<%= form_tag("/brands/campaigns/viral-invite-email-send", :method => "post", :class => "form-horizontal") do %>
      	<div class="control-group">
      		<%= label_tag(:to, "To:", :class => "control-label") %>
          <div class="controls">
            <%= text_field_tag(:to, nil, :placeholder => "To", :class => "span8", :autofocus => true) %>
          </div>
        </div>
        <div class="control-group">
          <%= label_tag(:message, "Message:", :class => "control-label") %>
          <div class="controls">
            <% unless @campaign.is_white_label? %>
              <%= text_area_tag(:message, nil, :placeholder => "Hey, check out brandbuddee.com! You can discover cool things in your city, score points for sharing, and earn rewards.", :class => "", :rows => 5, :class => "span8") %>
            <% else %>
                <%= text_area_tag(:message, nil, :placeholder => "Hey, check out the campaign I just embeded into my Facebook Page where you can discover cool things in your city, score points for sharing, and earn rewards.", :class => "", :rows => 5, :class => "span8") %>
            <% end %>
          </div>
        </div>
        <div class="control-group">
        	<div class="controls">
        		<%= hidden_field_tag "campaign_id", @campaign.id %>
        		<%= submit_tag("Send", class: "btn btn-success", style: "font-weight: 700;") %>
        	</div>
        </div>
      <% end %>
      <a href="/brands/campaigns/viral?_id=<%= @campaign.id %>" class="btn btn-info pull-right" style="font-weight:700;"><i class="icon-reply"></i> Back to Go Viral!</a>
		</div><!-- /.box-content -->
	</div><!-- /.box span8 -->
</div><!-- /.row-fluid -->
<hr>
<!-- end: Content -->
</div><!--/#content.span10-->
	</div><!--/fluid-row-->

<div class="clearfix"></div>

<%= render 'shared/brands_footer' %>

</div><!--/.fluid-container-->
<%= render 'shared/brands_scripts' %>