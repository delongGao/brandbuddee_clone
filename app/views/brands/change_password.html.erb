<%= render 'shared/brands_header' %>
<div class="container-fluid">
<div class="row-fluid">
<%= render 'shared/brands_side' %>
<noscript>
	<div class="alert alert-block span10">
		<h4 class="alert-heading">Warning!</h4>
		<p>You need to have <a title="sweepstakes contests giveaways brandbuddee" href="http://www.enable-javascript.com/" target="_blank">JavaScript</a> enabled to use this site.</p>
	</div>
</noscript>
<div id="content" class="span10">
<% flash.each do |name, msg| %>
<div class="row">
	<div class="span6 offset3">
		<div class="alert alert-<%= name %> fade in">
			<a title="sweepstakes contests giveaways brandbuddee" href="#" class="close" data-dismiss="alert">&times;</a>
			<%= msg.html_safe %>
		</div>
	</div>
</div>
<% end %>
<!-- Begin: Content -->
<div>
	<hr>
	<ul class="breadcrumb">
		<li>
			<a title="sweepstakes contests giveaways brandbuddee" href="/brands/dashboard">Dashboard</a> <span class="divider">/</span>
		</li>
		<li>
			<a title="sweepstakes contests giveaways brandbuddee" href="#">Change Password</a>
		</li>
		<% unless @brand.manager_first.nil? %><li class="pull-right">Welcome back, <%= @brand.manager_first %></li><% end %>
	</ul>
	<hr>
</div>
<div class="row-fluid sortable">
	<div class="box span8">
		<div class="box-header">
			<h2><i class="icon-lock"></i><span class="break"></span>Change Password</h2>
			<div class="box-icon">
				<a title="sweepstakes contests giveaways brandbuddee" href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
			</div>
		</div>
		<div class="box-content">
	      	<%= form_for @brand, url: url_for(controller: 'brands', action: 'update_password'), html: {class: "form-horizontal"} do |f| %>
				<% if @brand.errors.any? %>
					<% @brand.errors.full_messages.each do |message| %>
						<div class="alert alert-error fade in">
							<a title="sweepstakes contests giveaways brandbuddee" href="#" class="close" data-dismiss="alert">&times;</a>
							<strong>Uh Oh!</strong> <%= message %>
						</div>
					<% end %>
				<% end %>
				<div class="control-group">
					<%= f.label :current_password, class: "control-label" %>
					<div class="controls">
						<%= f.password_field :current_password, class: "span6", maxlength: 30, class: "txtMaximumLength" %>
					</div>
				</div>
				<div class="control-group">
      				<%= f.label :password, "New Password", class: "control-label" %>
      				<div class="controls">
      					<%= f.password_field :password, class: "span6", maxlength: 30, class: "txtMaximumLength" %>
      				</div>
      			</div>
				<div class="control-group">
      				<%= f.label :password_confirmation, "Confirm New Password", class: "control-label" %>
      				<div class="controls">
      					<%= f.password_field :password_confirmation, class: "span6", maxlength: 30, class: "txtMaximumLength" %>
      				</div>
      			</div>
				<div class="control-group">
					<div class="controls">
						<%= f.submit "Update Password", class: "btn btn-info btn-large", style: "font-weight:700;" %>
					</div>
				</div>
			<% end %>
      	</div>
	</div><!--/span-->
	<div class="box span4">
		<div class="box-header">
			<h2><i class="icon-question"></i><span class="break"></span>Page Information</h2>
			<div class="box-icon">
				<a title="sweepstakes contests giveaways brandbuddee" href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
			</div>
		</div>
		<div class="box-content">
	      	<h1 class="text-center text-info">About These Fields</h1>
	      	<dl>
	      		<dt>Current Password</dt>
	      		<dd>This is the password that you want to change.</dd>
	      		<dd>It should be between 6-30 characters.</dd>
	      		<dt>New & Confirm New Password</dt>
	      		<dd>This will be your new password.</dd>
	      		<dd>It should be between 6-30 characters.</dd>
	      		<dd>The two fields must match.</dd>
	      	</dl>
      	</div>
	</div><!--/span-->
</div><!--/row-->
<hr>
<!-- end: Content -->
</div><!--/#content.span10-->
	</div><!--/fluid-row-->

<div class="clearfix"></div>

<%= render 'shared/brands_footer' %>

</div><!--/.fluid-container-->
<%= render 'shared/brands_scripts' %>
<script src="/js/brands/bootstrap-maxlength.min.js"></script>
<script type="text/javascript">
      $(document).ready(function() {
            $('.txtMaximumLength').maxlength({
                  alwaysShow: true,
                  separator: ' of ',
                  postText: ' chars',
                  placement: 'bottom-left'
            });
      });
</script>
