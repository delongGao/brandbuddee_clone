								<%= flash[:notice] %>
							</div> <!-- .alert -->
						<% end %>


						<%= form_for @brand, :url => url_for(:controller => 'admin', :action => 'brand_update') do |f| %>
						   	<p class="">
						      <%= f.label :name, :class=>'' %>
						      <%= f.text_field :name, :class=>'' %>
						    </p>
						    <p class="">
						      <%= f.label :bio, :class=>'' %>
						      <%= f.text_area :bio, :class=>'', :rows => '7' %>
						    </p>
						    <p class="">
						      <%= f.label :website, :class=>'' %>
						      <%= f.text_field :website, :class=>'' %>
						    </p>
						    <p class="">
						      <%= f.label :facebook, :class=>'' %>
						      <%= f.text_field :facebook, :class=>'' %>
						    </p>
						    <p class="">
						      <%= f.label :twitter, :class=>'' %>
						      <%= f.text_field :twitter, :class=>'' %>
						    </p>
						    <p class="">
						      <%= f.label :pinterest, :class=>'' %>
						      <%= f.text_field :pinterest, :class=>'' %>
						    </p>
						    <p class="">
						      <%= f.label :gplus, :class=>'' %>
						      <%= f.text_field :gplus, :class=>'' %>
						    </p>

						    <%= hidden_field_tag(:brand_id, @brand.id, :name=>'brand[id]') %>
						    <%= hidden_field_tag(:date, Time.now, :name=>'brand[last_updated]') %>


						    <%= f.submit 'Update', :class=>"btn btn-info" %>
						  <% end %>


					</div>



						  

