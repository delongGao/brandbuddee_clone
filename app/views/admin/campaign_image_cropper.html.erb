			<div class="row-fluid sortable">
				<div class="box span12">
					<div class="box-header" data-original-title>
						<h2><i class="icon-edit"></i><span class="break"></span>Crop Campaign Image</h2>
						<div class="box-icon">
							<a title="Sweepstakes Contests Giveaways brandbuddee" href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
							<a title="Sweepstakes Contests Giveaways brandbuddee" href="#" class="btn-close"><i class="icon-remove"></i></a>
						</div>
					</div>
					<div class="box-content form-horizontal">
						<%= image_tag @campaign.campaign_image_url(:large), id: "cropbox" %>
						<h4>Preview</h4>
						<div style="width:260px; height:180px; overflow:hidden;  border:5px outset #72C64B;">
							<%= image_tag @campaign.campaign_image_url(:large), id: "preview", style: "max-height:none; max-width: none;" %>
						</div>

						<%= form_for @campaign, url: "/admin/campaign/apply-crop" do |f| %>
							<% %w[x y w h].each do |attribute| %>
								<%= f.hidden_field "crop_#{attribute}" %>
							<% end %>
							<%= hidden_field_tag 'campaign_id', @campaign.id %>
							<%= f.submit "Crop", class: "btn btn-large btn-success", style: "margin-top:1.5%;" %>
						<% end %>
					</div><!-- /box-content -->
				</div><!--/span-->
			
