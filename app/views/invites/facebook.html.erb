<%= render 'shared/header' %>

<div id="content" class="container">
	<div class="row" style="margin-top:2%;" id="insertbeforeme">
		<%= render 'shared/social_invite_header' %>
	</div><!-- /row -->
    <div class="row" style="margin-top:2%;">
        <div class="span6">
            <div class="well well-large">
                <% @friendslist = current_user.get_friends %>
                <% if @friendslist.class == String %>
                    <h3 style="text-align:center;">ERROR: Your Facebook session has expired. Please <a href="/signout">re-login</a>.</h3>
                <% else %>
                    <ul class="inviteprofilelist">
                        <% @counter = 0 %>
                        <% @friendslist.each do |friend| %>
                            <% if @counter==(@friendslist.size / 2).floor %>
                                </ul>
                            </div><!-- /well -->
                        </div><!-- /span6 -->
                        <div class="span6">
                            <div class="well well-large">
                                <ul class="inviteprofilelist">
                            <% end %>
                            <li class="inviteprofilelist"><img src="https://graph.facebook.com/<%= friend["id"] %>/picture?type=square" alt="<%= friend["name"] %>'s Profile Image" width="50" height="50" class="img-circle inviteprofileimage" />&nbsp;&nbsp;&nbsp;<%= friend["name"] %> <input type="button" class="btn btn-fuji-splash-3 invite-friend inviteprofilelist pull-right" onclick="invitePerson(<%= friend["id"] %>, '<%= friend["name"] %>'); return false;" value="Invite" /></li>
                            <% @counter += 1 %>
                        <% end %>
                    </ul>
                <% end %>
            </div><!-- /well -->
        </div><!-- /span6 -->
    </div><!-- /row -->
	<div class="row" style="padding-bottom:5%;">
		<div class="span12">
			<div><!-- bb video -->
