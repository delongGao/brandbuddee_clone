<%= render 'shared/header' %>
<div class="container">
	<div class="row" style="margin-top:5%;">
		<div class="span8 offset2">
			<div class="well well-large" style="overflow:hidden;">
				<div class="page-header" style="margin-top:0;">
  					<h2 style="text-align:center;"><i class="icon-ok"></i> Blog Selection</h2>
				</div>
				<ul style="list-style:none;font-size:1.5em;">
					<% @client.info["user"]["blogs"].each do |blog| %>
						<% url = blog["url"] %>
						<% url = url[7..-2] %>
						<li style="line-height:150%;"><a title="<%= @campaign.brand.name %> brandbuddee" href="/campaign/<%= @campaign.link %>/tumblr_content?<%= {link: url}.to_query %>"><%= blog["name"] %></a></li>
					<% end %>
				</ul>
				<%= link_to("/campaign/#{@campaign.link}", class: "btn btn-info pull-right", style: "font-weight:700;", title: "#{@campaign.brand.name} brandbuddee") do %>
					<i class="icon-chevron-left"></i> Back to Campaign
				<% end %>
			</div>
		</div>
	</div>
</div>
<%= render "shared/footer" %>