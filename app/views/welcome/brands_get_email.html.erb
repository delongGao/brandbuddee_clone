<%= render 'shared/header' %>

<div class="container" style="margin-top:2%;margin-bottom:15%;">
	<div class="row">
		<div class="span8 offset2">
			<div class="page-header">
				<h1 style="text-align:center;">Brand Email Address <small>enter your email below</small></h1>
			</div>
		</div>
	</div>
	<% flash.each do |name, msg| %>
	<div class="row">
		<div class="span6 offset3">
			<div class="alert alert-<%= name %> fade in">
				<a href="#" class="close" data-dismiss="alert">&times;</a>
				<%= msg %>
			</div>
		</div>
	</div>
	<% end %>
	<div class="row">
		<div class="span6 offset3">
			<div class="well well-large">
				<%= form_tag "/brands/update-email", class: "form-horizontal" do %>
					<div class="control-group">
						<%= label_tag "email_address", nil,  class: "control-label" %>
						<div class="controls">
							<%= text_field_tag "email_address", nil, autofocus: true %>
						</div>
					</div>
					<div class="control-group">
						<div class="controls">
							<%= submit_tag "Update", class: "btn btn-info btn-large", style: "font-weight:700;" %>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>

<%= render 'shared/footer' %>