<%= render 'shared/header' %>

<div class="container">
	<div class="row">
		<div class="span12">
			<div class="page-header">
				<h1 style="text-align:center;"> Can you imagine driving thousands of your fans to take action?&nbsp;&nbsp;&nbsp;<small>Sign up today and get started!</small></h1>
			</div>
		</div>
	</div>
	<div class="row" style="margin-top:3%;">
		<div class="span6 offset3">
			<div class="well well-large" style="overflow:hidden;padding:4%;">
				<div style="display:block;margin-bottom:4%;">
					<%= link_to(image_tag("/assets/facebook_login.png", size: "207x39", alt: "Log in with Facebook", title: "Log in with Facebook"), "/brands/facebook", style: "margin-left:0.5%;") %>
					<%= link_to(image_tag("/assets/twitter_login.png", size: "207x39", alt: "Log in with Twitter", title: "Log in with Twitter"), "/brands/twitter") %>
				</div>
				<%= form_for @brand, url: "/brands/create", html: { class: "form-horizontal" } do |f| %>
					<% if @brand.errors.any? %>
						<% @brand.errors.messages.delete(:password_digest) %>
						<% @brand.errors.full_messages.each do |message| %>
							<div class="alert alert-error fade in">
								<a href="#" class="close" data-dismiss="alert">&times;</a>
								<strong>Uh Oh!</strong> <%= message %>
							</div>
						<% end %>
					<% end %>
					<div class="control-group">
						<%= f.label :name, "Brand name", class: "control-label" %>
						<div class="controls">
							<%= f.text_field :name %>
						</div>
					</div>
					<div class="control-group">
						<%= f.label :email, class: "control-label" %>
						<div class="controls">
							<%= f.text_field :email %>
						</div>
					</div>
					<div class="control-group">
						<%= f.label :password, class: "control-label" %>
						<div class="controls">
							<%= f.password_field :password %>
						</div>
					</div>
					<div class="control-group">
						<%= f.label :password_confirmation, class: "control-label" %>
						<div class="controls">
							<%= f.password_field :password_confirmation %>
						</div>
					</div>
					<div class="control-group">
						<div class="controls">
							<%= f.submit "Sign Up!", class: "btn btn-info btn-large pull-right", style: "font-weight:700;margin-right:9%;" %>
						</div>
					</div>
				<% end %>
				<%= link_to("Are you a buddee?", "/signup", class: "btn btn-success", style: "font-weight:700;") %>
			</div><!-- /.well -->
		</div><!-- /.span6 -->
	</div><!-- /.row -->
</div><!-- /.container -->

<%= render 'shared/footer' %>
