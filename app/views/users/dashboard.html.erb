<script type="text/javascript">if (window.location.hash == '#_=_')window.location.hash = '';</script>

<div class="container" style="margin-top:105px;">
    <%= render 'shared/new_header' %>

      <% if flash[:notice].nil? %><% else %>
        <div class="alert alert-info">
          <button class="close" data-dismiss="alert">Ã—</button>
          <%= flash[:notice] %>
        </div> <!-- .alert -->
      <% end %>

      <% if params[:c].nil? %>
        <% @campaign = Campaign.all.order_by([:date, :desc]) %>
      <% elsif %>
        <% @category = Category.where(:name => params[:c]).first %> 
        <% @campaign = @category.campaigns.order_by([:date, :desc]) %>
      <% end %>


    <div class="row">

        <div class="span12">
            <div class="row unit-block">
                <div class="span12 unit-bg">
                    <div class="unit">
                        <legend>
                            <img src="assets/glyphicons_248_asterisk.png" />
                            Earn Rewards</legend>
                        <ul class="nav nav-pills">
                            <li><a href="<%= root_url %>">All</a></li>
                            <% @categories.each do |c| %>
                              <li <% if params[:c] == c.name %> class="active" <% end %> ><a href="?c=<%= c.name %>"><%= c.name %></a></li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row unit-block">
                <div class="span12 unit-bg">
                    <div id="myCarousel" class="carousel slide" data-interval="3000">
                        <!-- Carousel items -->
                        <div class="carousel-inner">
                            <div class="active item">
                                <img src="assets/banner1.jpg" alt="">
                                <div class="carousel-caption">
                                    <h4>
                                        Burberry Fashion Week</h4>
                                    <p>
                                        </p>
                                </div>
                            </div>
                            <div class="item">
                                <img src="assets/banner2.jpg" alt="">
                                <div class="carousel-caption">
                                    <h4>
                                        Ducati - Drive Test & Exclusive Jacket giveaway!</h4>
                                    <p>
                                        </p>
                                </div>
                            </div>
                            <div class="item">
                                <img src="assets/banner3.jpg" alt="">
                                <div class="carousel-caption">
                                    <h4>
                                        Vovito Gelato Day</h4>
                                    <p>
                                        </p>
                                </div>
                            </div>
                        </div>
                        <!-- Carousel nav -->
                        <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
                        <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="span12">
                    <ul class="thumbnails">
                        <% @campaign.each do |c| %>
                          <li class="span4">
                            <div class="thumbnail unit-bg">
                                  <a href="/campaign/<%= c.link %>">
                                      <%= image_tag(c.campaign_image_url(:standard).to_s, :width=>"100%") %>
                                  </a>
                                  <div class="caption">
                                      <h4>
                                          <%= c.title %></h4>
                                      <p>
                                          <%= truncate(c.detail, :length => 160, :omission => '... (continued)') %></p>
                                      <p>
                                          <span class="help-block"><small><i class="icon-tag"></i>&nbsp;<%= c.limit - c.redeems.size %> Available&nbsp;&nbsp;<i
                                              class="icon-time"> </i>&nbsp;7 Days Remaining</small></span>
                                      </p>
                                      <p class="campaign_details">
                                          <span class="view-deal"><a href="/campaign/<%= c.link %>" class="btn btn-success">View&nbsp;<i
                                              class="icon-chevron-right icon-white"></i></a></span><span class="help-inline text-highlight-small pts_req">
                                                  <%= c.points_required %></span>
                                                  pts
                                      </p>
                                  </div>
                              </div>
                          </li>
                        <% end %>

                    </ul>
                </div>
            </div>


            

        </div>
    </div>
</div>
<%= render 'shared/new_footer' %>



