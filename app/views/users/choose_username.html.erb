<%= render 'shared/header_incomplete' %>

<div class="container main_container" style="padding-left:0;margin-top:20px;">

	<%#= image_tag('startupclub_logo.png', :class=>"welcome_logo", :alt=>"start club", :size=>"500x33") %>

	<% if current_user %>
	<div class="row">


		<div class="span7 choose_username_wrap">
		<div class="well form-horizontal">

				<h2 style="font-weight:500;">Choose your username »</h2>
				<br>
				
				<% if flash[:notice].nil? %><% else %>
					<div class="alert alert-danger">
						<button class="close" data-dismiss="alert">×</button>
						<%= flash[:notice] %>
					</div> <!-- .alert -->
				<% end %>

				<%= form_for @user, :url => {:controller => 'users', :action => 'choose_username_update'} do |f| %>


					<div class="input-prepend">
		              <span class="add-on">brandbuddee.com/</span>
		              <%= f.text_field :nickname, :id=>'prependedInput', :class=>'span2', :placeholder=>'username', :size=>'' %>
		            </div>
		            <%= f.submit 'Submit', :class=>"btn btn-info" %>

				<% end %>

				

		</div> <!-- .form-horizontal -->
				<% end %>

		</div> <!-- .span9 -->
	</div> <!-- .row -->
</div><!--/.container-->

<%#= render 'shared/footer' %>