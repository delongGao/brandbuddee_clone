   	<td><%= u.gender %></td>
   	<td><%= u.phone %></td>
   	<td><%= u.city %></td>
   	<td><%= u.state %></td>
   	<td><%= u.website %></td>
   	<td><%= u.bio %></td>
   	<td>
   		<% u.campaigns.each do |c| %>
   			<span class="label"><%= c.title %></span>
   		<% end %>
   	</td>
   	<td>
